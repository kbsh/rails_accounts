<%- model_class = Journal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize+"詳細" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:debit_id) %>:</strong></dt>
  <dd><%= @journal.debit_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:credit_id) %>:</strong></dt>
  <dd><%= @journal.credit_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @journal.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trade_date) %>:</strong></dt>
  <dd><%= @journal.trade_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:memo) %>:</strong></dt>
  <dd><%= @journal.memo %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              journals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_journal_path(@journal), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              journal_path(@journal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
