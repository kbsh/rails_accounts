<%- model_class = DebtGroup -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.singularize.titleize %> <%=t 'helpers.titles.expenses' %>一覧</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @debt_groups.each do |debt_group| %>
      <tr>
        <td><%= debt_group.name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_debt_group_path(debt_group), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      debt_group_path(debt_group),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_debt_group_path,
            :class => 'btn btn-primary' %>
